<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tv_title_vertical_margin"
        android:layout_marginTop="@dimen/tv_title_vertical_margin"
        android:text="@string/str_add_goal"
        android:textSize="@dimen/tv_title_fontsize" />

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_close"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_title"
        android:layout_alignBottom="@id/tv_title"
        android:background="@null"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:id="@+id/et_goal"
        android:hint="@string/hint_et_goal"
        android:padding="16dp"/>
    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/dpv_date"
        android:layout_below="@id/et_goal"></DatePicker>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_it"
        android:layout_below="@id/dpv_date"
        android:text="@string/str_add_goal"
        android:textAllCaps="false"/>

</RelativeLayout>